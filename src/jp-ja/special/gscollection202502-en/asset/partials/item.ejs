    <div class="p_lp_pickup_blockarea">
      <% for (var i = 1; i <= 6; i++) { %>
        <div class="p_lp_pickup_block fade-element">
          <div class="p_lp_pickup_block-imagearea">
            <img src="<%= common.imgPath %>/pickup_img_<%- common.OtherItem[i-1].productName %>.jpg" alt="<%= common.OtherItem[i-1].brandName ? common.OtherItem[i-1].brandName + ' ' : '' %><%= common.OtherItem[i-1].productName %>" />
          </div>
          <div class="p_lp_pickup_block-textarea">
            <!-- キャッチコピーを表示 -->
            <p class="p_lp_pickup_block-text1">
              <%- common.OtherItem[i-1].productCatchphrase %>
            </p>
            <div class="p_lp_pickup_block-textblockarea">
              <div class="p_lp_pickup_block-textblock">
                <div class="p_lp_pickup_block-textwrap">
                  <!-- ブランド名（あれば）と製品名 -->
                  <p class="p_lp_pickup_block-text2">
                    <% if(common.OtherItem[i-1].brandName) { %>
                      <%- common.OtherItem[i-1].brandName %><br />
                    <% } %>
                    <%- common.OtherItem[i-1].productName %>
                  </p>
                  <!-- 各スペック情報。改行は<br />で出力 -->
